# Copy this file to local.env (or similar) and update the placeholder values.
# Then `source local.env` before running `go run cmd/vc-rest`.

export VC_REST_HOST_URL=0.0.0.0:8075
export VC_REST_HOST_URL_EXTERNAL=http://localhost:8075
export VC_REST_API_GATEWAY_URL=http://localhost:8075
export VC_REST_PROFILES_FILE_PATH=/absolute/path/to/profiles.json
export VC_REST_DEV_MODE=true
export VC_REST_TLS_SYSTEMCERTPOOL=true

export VC_REST_MONGODB_CONNECTION_STRING=mongodb://localhost:27017

# Set to "local" for tests, switch to "aws"/"azure"/etc. in production.
export VC_REST_DEFAULT_KMS_TYPE=local
# Replace with a base64-encoded 32-byte key (e.g., python - <<<'import os,base64;print(base64.b64encode(os.urandom(32)).decode())')
export VC_REST_LOCAL_KMS_MASTER_KEY=REPLACE_WITH_BASE64_KEY

# Use mongo or redis. When using redis, configure the connection string below.
export VC_TRANSIENT_DATA_STORE_TYPE=redis
export VC_REDIS_URL=localhost:6379
export VC_REDIS_DISABLE_TLS=true

export VC_REST_CONTEXT_PROVIDER_URL=https://context-provider.example/contexts.jsonld
export VC_REST_CONTEXT_ENABLE_REMOTE=true

export VC_REST_API_TOKEN=rw_token
export VC_REST_REQUEST_TOKENS=csl=rw_token

# Hydra mock (login/consent). Point to actual Hydra URLs in production.
export HYDRA_ADMIN_URL=https://localhost:8081
export HYDRA_LOGIN_URL=https://localhost:8081/login
export HYDRA_CONSENT_URL=https://localhost:8081/consent
